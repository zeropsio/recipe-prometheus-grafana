global:
  scrape_interval: 10s
  evaluation_interval: 10s

# alerting:
#   alertmanagers:
#     - static_configs:
#         - targets:
#           # - alertmanager:9093

scrape_configs:
  - job_name: "zerops"
    honor_labels: true
    http_sd_configs:
      - url: "http://metrics.core.zerops:9601/service-discovery"

  - job_name: "prometheus"
    static_configs:
      - targets: [ "localhost:9090" ]
        labels:
          app: "prometheus"
          # Zerops adds these labels automatically to service discovery, but they need to be added manually to custom jobs
          region: {{.ZEROPS_NestName}}
          projectId: {{.ZEROPS_ProjectId}}
          instanceId: {{.ZEROPS_InstanceId}}

{{ if .CENTRAL_PROMETHEUS_URL -}}
remote_write:
  - name: primary
    url: {{.CENTRAL_PROMETHEUS_URL}}
    {{ if and .CENTRAL_PROMETHEUS_USER .CENTRAL_PROMETHEUS_PASSWORD -}}
    basic_auth:
      username: {{.CENTRAL_PROMETHEUS_USER}}
      password: {{.CENTRAL_PROMETHEUS_PASSWORD}}
    {{- end }}
{{- end }}
